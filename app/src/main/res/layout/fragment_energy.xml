<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/energy_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tbBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:alpha="0.87"
        android:clickable="true"
        android:contentDescription="@null"
        android:padding="6dp"
        android:src="@drawable/ic_back_left"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_width="0dp"
        android:layout_height="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="107dp"
        android:layout_height="28dp"
        tools:layout_editor_absoluteY="92dp"
        tools:layout_editor_absoluteX="105dp" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="107dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar5"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6" />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="107dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/fan"
        tools:layout_editor_absoluteY="72dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/progressBar3"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.62" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="49dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/light"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/light"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="133dp" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">
    <transition
        class="bbu.com.smartoffice.transition.FabScaleShow"
        android:duration="300"
        android:startDelay="1000">
        <targets>
            <target android:targetId="@id/fab" />
        </targets>
    </transition>

    <fade
        android:duration="400"
        android:fadingMode="fade_in"
        android:startDelay="500">
        <targets>
            <target android:targetId="@id/tbBack" />
            <target android:targetId="@id/tbAdd" />
            <target android:targetId="@id/tab" />
        </targets>
    </fade>

    <slide
        android:duration="300"
        android:slideEdge="bottom"
        android:startDelay="300">
        <targets>
            <target android:targetId="@id/recycleView" />
        </targets>
    </slide>

</transitionSet>